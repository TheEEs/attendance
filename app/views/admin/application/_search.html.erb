<form data-controller="search" class="search flex" role="search" data-turbo-frame="<%= resource_pluralized_name %>">
  <input class=""
         data-search-target="searchInput"
         id="search"
         type="search"
         name="search"
         placeholder="<%= t("administrate.search.label",
                            resource: resource_name) %>"
         value="<%= search_term %>">

  <%= link_to clear_search_params, class: "search__clear-link", data:{ turbo_frame: resource_pluralized_name, search_target: "clear" } do %>
    <svg class="search__clear-icon" role="img">
      <title><%= t("administrate.search.clear") %></title>
      <use xlink:href="#icon-cancel" />
    </svg>
  <% end %>
</form>